<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>app.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MoviesController</servlet-name>
        <servlet-class>app.controllers.MoviesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MoviesController</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MovieController</servlet-name>
        <servlet-class>app.controllers.MovieController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovieController</servlet-name>
        <url-pattern>/movies/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ActorController</servlet-name>
        <servlet-class>app.controllers.ActorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActorController</servlet-name>
        <url-pattern>/actors/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WatchListController</servlet-name>
        <servlet-class>app.controllers.WatchListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WatchListController</servlet-name>
        <url-pattern>/watchlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RateMovieController</servlet-name>
        <servlet-class>app.controllers.RateMovieController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RateMovieController</servlet-name>
        <url-pattern>/movies/rate_movie</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddToWatchListController</servlet-name>
        <servlet-class>app.controllers.AddToWatchListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToWatchListController</servlet-name>
        <url-pattern>/movies/add_to_watchlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RemoveFromWatchListController</servlet-name>
        <servlet-class>app.controllers.RemoveFromWatchListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFromWatchListController</servlet-name>
        <url-pattern>/remove_from_watchlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogOutController</servlet-name>
        <servlet-class>app.controllers.LogOutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>app.controllers.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
</web-app>